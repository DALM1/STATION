<div class="container mx-auto p-8 bg-gray-900 text-white rounded-lg">
  <h2 class="text-2xl font-bold mb-4">Modifier le profil</h2>

  <%= form_for(@user, url: user_path(@user), method: :patch, html: { multipart: true }) do |f| %>
    <div class="mb-4">
      <%= f.label :username, "Nom d'utilisateur", class: "block text-sm font-medium mb-2" %>
      <%= f.text_field :username, class: "w-full p-2 rounded-lg bg-gray-700 text-white" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, "Adresse email", class: "block text-sm font-medium mb-2" %>
      <%= f.email_field :email, class: "w-full p-2 rounded-lg bg-gray-700 text-white" %>
    </div>

    <div class="mb-4">
      <%= f.label :avatar, "Avatar", class: "block text-sm font-medium mb-2" %>
      <%= f.file_field :avatar, class: "w-full p-2 rounded-lg bg-gray-700 text-white" %>
    </div>

    <div class="mb-4">
      <%= f.label :background, "Fond d'écran de l'application", class: "block text-sm font-medium mb-2" %>
      <%= f.file_field :background, class: "w-full p-2 rounded-lg bg-gray-700 text-white" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, "Nouveau mot de passe (laisser vide pour ne pas changer)", class: "block text-sm font-medium mb-2" %>
      <%= f.password_field :password, class: "w-full p-2 rounded-lg bg-gray-700 text-white" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirmez le mot de passe", class: "block text-sm font-medium mb-2" %>
      <%= f.password_field :password_confirmation, class: "w-full p-2 rounded-lg bg-gray-700 text-white" %>
    </div>

    <div class="mb-4">
      <%= f.label :current_password, "Mot de passe actuel", class: "block text-sm font-medium mb-2" %>
      <%= f.password_field :current_password, class: "w-full p-2 rounded-lg bg-gray-700 text-white" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Mettre à jour", class: "bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded-lg" %>
    </div>
  <% end %>
</div>
