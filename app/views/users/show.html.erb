<div class="flex flex-col items-center mb-6">
  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar.variant(resize_to_fill: [100, 100]), class: "w-20 h-20 rounded-full mb-2" %>
  <% else %>
    <%= image_tag 'gif.png', class: "w-20 h-20 rounded-full mb-2" %>
  <% end %>

  <h3 class="text-lg font-bold">
    <%= @user.username.present? ? @user.username : @user.email %>
  </h3>

  <% if current_user == @user %>
    <div class="mt-4">
      <%= link_to 'Modifier le profil', edit_profile_user_path(@user), class: "bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg" %>
    </div>
  <% end %>
</div>
