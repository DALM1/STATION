<h2 class="text-2xl font-bold text-white">Entrer le mot de passe pour accéder à la salle <%= @chat_room.name %></h2>

<%= form_with url: join_chat_room_path(@chat_room), method: :post, class: "space-y-4" do %>
  <div>
    <%= label_tag :password, "Mot de passe", class: "block text-white mb-2" %>
    <%= password_field_tag :password, nil, class: "w-full px-4 py-2 bg-gray-800 text-white rounded-lg border border-gray-700 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:outline-none" %>
  </div>

  <div>
    <%= submit_tag "Entrer", class: "w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
<% end %>
