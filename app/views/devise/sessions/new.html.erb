<h2 class="text-2xl font-bold text-center text-white mb-6">Se connecter</h2>

<div class="w-full max-w-md mx-auto bg-gray-900 p-8 rounded-lg shadow-lg">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>

    <div>
      <%= f.label :email, class: "block text-gray-300 font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, placeholder: "Votre email", class: "w-full px-4 py-2 bg-gray-800 text-white rounded-lg border border-gray-700 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:outline-none" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-gray-300 font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Votre mot de passe", class: "w-full px-4 py-2 bg-gray-800 text-white rounded-lg border border-gray-700 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:outline-none" %>
    </div>

    <div class="flex items-center">
      <%= f.check_box :remember_me, class: "mr-2 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
      <%= f.label :remember_me, class: "text-gray-300" %>
    </div>

    <div>
      <%= f.submit "Se connecter", class: "w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <div class="flex justify-between items-center mt-4 text-gray-400">
    <%= link_to "Créer un compte", new_user_registration_path, class: "hover:text-white" %> |
    <%= link_to "Mot de passe oublié ?", new_user_password_path, class: "hover:text-white" %>
  </div>
</div>
